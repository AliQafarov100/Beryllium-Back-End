@model List<Slider>
@{
    ViewData["Title"] = "Index";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Inverse table</h4>
            <a asp-controller="Slider" asp-action="Create" class="btn btn-danger">Create</a>
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Setting
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Slider slider in Model)
                        {
                            <tr>
                                <td>
                                    @slider.Id
                                </td>
                                <td>
                                    <img src="/assets/Image/Slider/@slider.Image" style="width: 150px; height: 90px;"/>
                                </td>
                                <td>
                                    <div class="d-flex">
                                        <div>
                                            <a class="btn btn-primary" asp-controller="Slider" asp-action="Detail" asp-route-id="@slider.Id">
                                                <i class="mdi mdi-details"></i>
                                            </a>
                                        </div>
                                        <div>
                                            <a class="btn btn-success" asp-controller="Slider" asp-action="Edit" asp-route-id="@slider.Id">
                                                <i class="mdi mdi-tooltip-edit"></i>
                                            </a>
                                        </div>
                                        <div>
                                            <a class="btn btn-danger" asp-controller="Slider" asp-action="Delete" asp-route-id="@slider.Id">
                                                <i class="mdi mdi-delete-forever"></i>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
