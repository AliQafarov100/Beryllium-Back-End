@model News
@{
    ViewData["Title"] = "Edit";
}
<form method="post">
    <div>
        <label>News Title:</label>
        <input asp-for="TitleNews" class="form-control" />
        <span asp-validation-for="TitleNews"></span>
    </div>
    <div>
        <label>Description News:</label>
        <input asp-for="DescriptionNews" class="form-control" />
        <span asp-validation-for="DescriptionNews"></span>
    </div>
    <div>
        <label>News Date:</label>
        <input asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-danger">Edit</button>
    </div>
</form>

