@model Work
@{
    ViewData["Title"] = "Delete";
}

<div>
    <div>
        <p>Work Name:</p>
        <h4>@Model.WorkName</h4>
    </div>
    <div>
        <p>Work Description:</p>
        <h4>@Model.WorkDescription</h4>
    </div>
    <div>
        <p>Work Icon:</p>
        <h4>@Model.WorkIcon</h4>
    </div>
</div>

<form method="post">
    <div class="mt-3">
        <button type="submit" class="btn btn-danger">Delete</button>
    </div>
</form>