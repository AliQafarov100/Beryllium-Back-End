@model Work
@{
    ViewData["Title"] = "Edit";
}

<form method="post" enctype="multipart/form-data">
    <div>
        <label>Work Name:</label>
        <input asp-for="WorkName" class="form-control" />
        <span asp-validation-for="WorkName"></span>
    </div>
    <div>
        <label>Work Description:</label>
        <input asp-for="WorkDescription" class="form-control" />
        <span asp-validation-for="WorkDescription"></span>
    </div>
    <div>
        <label>Icon:</label>
        <input asp-for="WorkIcon" class="form-control" />
        <span asp-validation-for="WorkIcon" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-danger">Edit</button>
    </div>
</form>

