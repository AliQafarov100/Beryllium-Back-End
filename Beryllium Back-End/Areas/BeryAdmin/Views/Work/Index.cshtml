@model List<Work>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Inverse table</h4>
            <a asp-controller="Work" asp-action="Create" class="btn btn-danger">Create</a>
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Work Name
                            </th>
                            <th>
                                Work Description
                            </th>
                            <th>
                                Work Icon
                            </th>
                            <th>
                                Setting
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Work work in Model)
                        {
                        <tr>
                            <td>
                                @work.Id
                            </td>
                            <td>
                                @work.WorkName
                            </td>
                            <td>
                                @work.WorkDescription
                            </td>
                            <td>
                                @work.WorkIcon
                            </td>
                            <td>
                                <div class="d-flex">
                                    <div>
                                        <a class="btn btn-primary" asp-controller="Work" asp-action="Detail" asp-route-id="@work.Id">
                                            <i class="mdi mdi-details"></i>
                                        </a>
                                    </div>
                                    <div>
                                        <a class="btn btn-success" asp-controller="Work" asp-action="Edit" asp-route-id="@work.Id">
                                            <i class="mdi mdi-tooltip-edit"></i>
                                        </a>
                                    </div>
                                    <div>
                                        <a class="btn btn-danger" asp-controller="Work" asp-action="Delete" asp-route-id="@work.Id">
                                            <i class="mdi mdi-delete-forever"></i>
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


