@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Inverse table</h4>
            
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                First Name
                            </th>
                            <th>
                                Last Name
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                UserName
                            </th>
                            <th>
                                Setting
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var register in Model)
                        {
                        <tr>
                            <td>
                                @register.FirtsName
                            </td>
                            <td>
                                @register.LastName
                            </td>
                            <td>
                                @register.Email
                            </td>
                            <td>
                                @register.UserName
                            </td>
                            <td>
                                <div class="d-flex">
                                    <div>
                                        <a class="btn btn-primary" asp-controller="Slider" asp-action="Detail">
                                            <i class="mdi mdi-details"></i>
                                        </a>
                                    </div>
                                    <div>
                                        <a class="btn btn-success" asp-controller="Slider" asp-action="Edit">
                                            <i class="mdi mdi-tooltip-edit"></i>
                                        </a>
                                    </div>
                                    <div>
                                        <a class="btn btn-danger" asp-controller="Slider" asp-action="Delete">
                                            <i class="mdi mdi-delete-forever"></i>
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

