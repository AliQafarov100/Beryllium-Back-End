<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.css" integrity="sha512-OTcub78R3msOCtY3Tc6FzeDJ8N9qvQn1Ph49ou13xgA9VsH9+LRxoFU6EqLhW4+PKRfU+/HReXmSZXHEkpYoOA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css" integrity="sha512-sMXtMNL1zRzolHYKEujM2AqCLUR9F2C4/05cdbxjjLSRvMQIciEPCQZo++nk7go3BtSuK9kfa/s+a4f4i5pLkw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/assets/scss/css/style.css">
    <link rel="stylesheet" href="/assets/scss/css/owl.carousel.css">
    <title>Document</title>
</head>
<body>
    <header>
        <nav>
            <div class="container">
                <div class="row align-items-center">
                    <div class="logo col-lg-6 col-md-6 col-sm-6 col-6">
                        <h5>@layoutservice.GetDatas().Result.FirstOrDefault(i => i.Key == "HeaderLogo").Value</h5>
                    </div>
                    <div class="bar col-lg-6 col-md-6 col-sm-6 col-6">
                        <a href="javascript:void(0);" class="icon" onclick="myFunction()">
                            <i class="fa fa-bars"></i>
                        </a>
                    </div>
                    <div class="service col-lg-6 col-md-6">
                        <ul class="d-flex align-items-center">
                            <li><a href="" class="active">Home</a></li>
                            <li><a href="">About</a></li>
                            <li><a href="">Services</a></li>
                            <li><a href="">Dropdown</a></li>
                            <li><a href="">Portfolio</a></li>
                            <li><a href="">Contact</a></li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li><a href="#">@User.Identity.Name.ToUpper()</a></li>
                                <li><a asp-controller="Account" asp-action="Logout">Log out</a></li>
                            }
                            else
                            {
                                <li><a asp-controller="Account" asp-action="Register"><i class="fa-solid fa-address-card"></i></a></li>
                                <li><a asp-controller="Account" asp-action="Login">Log in</a></li>
                            }
                        </ul>
                    </div>
                    <!-- Top Navigation Menu -->
                    <div class="topnav">

                        <!-- Navigation links (hidden by default) -->
                        <div id="myLinks">
                            <ul class="">
                                <li><a href="" class="active">Home</a></li>
                                <li><a href="">About</a></li>
                                <li><a href="">Services</a></li>
                                <li><a href="">Dropdown</a></li>
                                <li><a href="">Portfolio</a></li>
                                <li><a href="">Contact</a></li>
                            </ul>
                        </div>
                        <!-- "Hamburger menu" / "Bar icon" to toggle the navigation links -->

                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div>
        @RenderBody()
    </div>
    <footer>
        <section id="foot" class="py-5">
            <div class="container">
                <div class="row">
                    <div class="footer-box col-lg-3 text-light">
                        <strong>@layoutservice.GetDatas().Result.FirstOrDefault(i => i.Key == "FooterLogo").Value</strong>
                        <p>@layoutservice.GetDatas().Result.FirstOrDefault(i => i.Key == "FooterText").Value</p>
                    </div>
                    <div class="footer-box col-lg-3">
                        <strong>Links</strong>
                        <ul>
                            <li><a href="">HOME</a></li>
                            <li><a href="">FEATURES</a></li>
                            <li><a href="">PRODUCTS</a></li>
                            <li><a href="">TESTIMONIAL</a></li>
                            <li><a href="">CONTACT</a></li>
                        </ul>
                    </div>
                    <div class="footer-box col-lg-3">
                        <strong>Work</strong>
                        <ul>
                            <li><a href="">HOME</a></li>
                            <li><a href="">FEATURES</a></li>
                            <li><a href="">PRODUCTS</a></li>
                            <li><a href="">TESTIMONIAL</a></li>
                        </ul>
                    </div>
                    <div class="footer-box col-lg-3">
                        <form action="">
                            <input type="text" class="w-100" placeholder="Enter your email">
                            <button type="button" class="btn btn-secondary mt-2">Send</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <section id="end">
            <div class="container">
                <div class="row align-items-center">
                    <div class="rights col-lg-6 mt-4 col-md-12 col-sm-12">
                        <p>© 2016 Free HTML5. All Rights Reserved.</p>
                    </div>
                    <div class="design d-flex justify-content-end col-lg-6 mt-4 col-md-12 col-sm-12">
                        <p>Designed by <span><a href="">FreeHTML5.co</a></span> Demo Images & <span><a href="">Unsplash</a></span></p>
                    </div>
                </div>
            </div>
        </section>
    </footer>
    <div class="arrow">
        <i class="fa-solid fa-arrow-up"></i>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js" integrity="sha512-bPs7Ae6pVvhOSiIcyUClR7/q2OAsRiovw4vAkX+zJbw3ShAeeqezq50RIIcIURq7Oa20rW2n2q+fyXBNcU9lrw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="/assets/Js/script.js"></script>
</body>
</html>
